<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
           xsi:type="MailApp">
  
  <Id>12345678-1234-1234-1234-123456789012</Id>
  <Version>1.0.0.2</Version>
  <ProviderName>Your Company</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Trigger Flow"/>
  <Description DefaultValue="Trigger Power Automate flow from Outlook"/>
  <IconUrl DefaultValue="https://karanpanchallll.github.io/outlook2/icon-64.png"/>
  <HighResolutionIconUrl DefaultValue="https://karanpanchallll.github.io/outlook2/icon-128.png"/>
  <SupportUrl DefaultValue="https://karanpanchallll.github.io/outlook2/support"/>
  
  <AppDomains>
    <AppDomain>https://karanpanchallll.github.io</AppDomain>
  </AppDomains>
  
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>
  
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1"/>
    </Sets>
  </Requirements>
  
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://karanpanchallll.github.io/outlook2/taskpane.html"/>
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>
  
  <Permissions>ReadWriteMailbox</Permissions>
  
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
  </Rule>
  
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Requirements>
      <bt:Sets DefaultMinVersion="1.5">
        <bt:Set Name="Mailbox"/>
      </bt:Sets>
    </Requirements>
    
    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <FunctionFile resid="Commands.Url"/>
          
          <!-- MESSAGE READ SURFACE - This is the main reading area -->
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <!-- Using TabDefault puts it in the Home tab -->
            <OfficeTab id="TabDefault">
              <!-- Create a custom group that appears earlier in the ribbon -->
              <Group id="msgReadCustomGroup">
                <Label resid="GroupLabel"/>
                <!-- OverriddenByRibbonApi=false ensures it's always visible -->
                
                <!-- Primary action button -->
                <Control xsi:type="Button" id="msgReadTriggerButton">
                  <Label resid="TriggerButton.Label"/>
                  <Supertip>
                    <Title resid="TriggerButton.SupertipTitle"/>
                    <Description resid="TriggerButton.SupertipText"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ExecuteFunction">
                    <FunctionName>triggerFlowFromRibbon</FunctionName>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
          
        </DesktopFormFactor>
      </Host>
    </Hosts>
    
    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://karanpanchallll.github.io/outlook2/icon-16.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://karanpanchallll.github.io/outlook2/icon-32.png"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://karanpanchallll.github.io/outlook2/icon-80.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="Commands.Url" DefaultValue="https://karanpanchallll.github.io/outlook2/commands.html"/>
        <bt:Url id="Taskpane.Url" DefaultValue="https://karanpanchallll.github.io/outlook2/taskpane.html"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="GroupLabel" DefaultValue="Flow Actions"/>
        <bt:String id="TriggerButton.Label" DefaultValue="Trigger Flow"/>
        <bt:String id="TriggerButton.SupertipTitle" DefaultValue="Trigger Power Automate"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="TriggerButton.SupertipText" DefaultValue="Analyze this email and trigger the Power Automate workflow for routing"/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>

</OfficeApp>

